  <!-- Klientside JavaScript -->
  <script type="module" client:load>
    // Funksjon for å toggle (åpne/lukke) svarene
    function toggleAnswer(buttonId, answerId) {
      const button = document.getElementById(buttonId);
      const answer = document.getElementById(answerId);
      const arrow = button.querySelector(".faq-arrow");

      // Toggle synlighet av svaret
      answer.classList.toggle("hidden");

      // Endre pilens retning basert på om svaret er åpent eller lukket
      if (answer.classList.contains("hidden")) {
        arrow.innerHTML = "&#9660;"; // Ned-pil
      } else {
        arrow.innerHTML = "&#9650;"; // Opp-pil
      }
    }

    // Legge til event listeners for hvert spørsmål
    document.getElementById("faq1Button").addEventListener("click", () => {
      toggleAnswer("faq1Button", "faq1Answer");
    });

    document.getElementById("faq2Button").addEventListener("click", () => {
      toggleAnswer("faq2Button", "faq2Answer");
    });

    document.getElementById("faq3Button").addEventListener("click", () => {
      toggleAnswer("faq3Button", "faq3Answer");
    });
  </script>
