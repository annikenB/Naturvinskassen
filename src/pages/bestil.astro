---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Card from "../components/BestilCard.astro";
import BestilCard from "../components/BestilCard.astro";
import lillekasse from "../assets/images/small.webp";
import mellemkasse from "../assets/images/medium.webp";
import storkasse from "../assets/images/large.webp";
import skræddersy from "../assets/images/make.webp";
import pil from "../assets/images/v.webp";
---

<MainLayout>
  <h1 class="text-center">Vælg dit favorit abonnement</h1>

  <div class="text-center">
    <p class="inline-flex items-center">
      <a href="/bestil" class="font-bold">Vælg</a>

      <Image src={pil} alt="pil" class="mx-voress w-4 opacity-100 -rotate-90" />

      <a href="/betal" class="font-regular">Betal</a>
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4">
    <div>
      <a href="/betal">
        <BestilCard
          title="DEN LILLE"
          image={lillekasse.src}
          quantity={2}
          price="300,00"
          buttonLabel="knap her"
        />
      </a>
    </div>
    <div>
      <a href="/betal">
        <BestilCard
          title="DEN MELLEMSTORE"
          image={mellemkasse.src}
          quantity={3}
          price="450,00"
          buttonLabel="knap her"
        />
      </a>
    </div>
    <div>
      <a href="/betal">
        <BestilCard
          title="DEN STORE"
          image={storkasse.src}
          quantity={5}
          price="600,00"
          buttonLabel="knap her"
        />
      </a>
    </div>

    <div>
      <a href="/skraedersy">
        <BestilCard
          title="SKRÆDDERSY"
          image={skræddersy.src}
          quantity="1-8"
          price="Fra 150"
          buttonLabel="knap her"
        />
      </a>
    </div>
  </div>
</MainLayout>
