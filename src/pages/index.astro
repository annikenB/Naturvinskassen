  <script>
    const fixedImage = document.getElementById('fixedImage');
    const section = document.getElementById('special-section');

    // Tjekker sektionens position, mens brugeren scroller
    window.addEventListener('scroll', () => {
      const sectionRect = section.getBoundingClientRect();

      // Hvis sektionen er synlig på skærmen, vis billedet
      if (sectionRect.top <= window.innerHeight && sectionRect.bottom >= 0) {
        fixedImage.style.display = 'flex'; // Viser billedet
      } else {
        fixedImage.style.display = 'none'; // Skjuler billedet
      }
    });
  </script>


