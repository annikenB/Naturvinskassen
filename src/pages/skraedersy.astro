---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
---

<MainLayout>
  <h1 class="text-center">Skræddersy dit abonnement</h1>
  <div class="text-center">
    <p class="font-bold">
      Vælg

      <a href="/betal" class="font-light">Betal</a>
    </p>
  </div>

  <section class="p-4 mx-margin bg-farvenavn-blaa rounded-card">
    <div class="p-4">
      <h3 class="text-center">Din kasse Lige som du kan lide det</h3>
      <p>
        Tilføj de typer af naturvin som du ønsker i dit månedlige abonnement. Du
        vil modtage kassen pr. d. første hver måned. - Naturvin lige til døre!
      </p>
    </div>

    <div class="m-voresxs">
      <div
        class="flex items-center justify-between border-b-1 border-gray-300 py-2"
      >
        <span class="text-lg font-medium">Hvid</span>
        <div class="flex items-center space-x-2">
          <button class="px-2 py-1 rounded bg-gray-200">-</button>
          <span class="font-medium">1</span>
          <button class="px-2 py-1 rounded bg-gray-200">+</button>
        </div>
      </div>

      <div
        class="flex items-center justify-between border-t border-b-1 border-gray-300 py-2"
      >
        <span class="text-lg font-medium">Rød</span>
        <div class="flex items-center space-x-2">
          <button class="px-2 py-1 rounded bg-gray-200">-</button>
          <span class="text-lg font-medium">2</span>
          <button class="px-2 py-1 rounded bg-gray-200">+</button>
        </div>
      </div>

      <div
        class="flex items-center justify-between border-t border-b-1 border-gray-300 py-2"
      >
        <span class="text-lg font-medium">Orange</span>
        <div class="flex items-center space-x-2">
          <button class="px-2 py-1 rounded bg-gray-200">-</button>
          <span class="text-lg font-medium">2</span>
          <button class="px-2 py-1 rounded bg-gray-200">+</button>
        </div>
      </div>

      <div
        class="flex items-center justify-between border-t border-b-1 border-gray-300 py-2"
      >
        <span class="text-lg font-medium">Rose</span>
        <div class="flex items-center space-x-2">
          <button class="px-2 py-1 rounded bg-gray-200 hover:bg-gray-400"
            >-</button
          >
          <span class="text-lg font-medium">0</span>
          <button class="px-2 py-1 rounded bg-gray-200 hover:bg-gray-400"
            >+</button
          >
        </div>
      </div>

      <div
        class="flex items-center justify-between border-t border-b-1 border-gray-300 py-2"
      >
        <span class="text-lg font-medium">Bobler</span>
        <div class="flex items-center space-x-2">
          <button class="px-2 py-1 rounded bg-gray-200">-</button>
          <span class="text-lg font-medium">1</span>
          <button class="px-2 py-1 rounded bg-gray-200">+</button>
        </div>
      </div>

      <div
        class="flex items-center justify-between border-t border-b-1 border-gray-300 py-2"
      >
        <span class="text-lg font-medium">Suprise mig</span>
        <div class="flex items-center space-x-2">
          <button class="px-2 py-1 rounded bg-gray-200">-</button>
          <span class="text-lg font-medium">0</span>
          <button class="px-2 py-1 rounded bg-gray-200">+</button>
        </div>
      </div>
    </div>

    <!-- Total og Pris -->
    <div class="flex items-center justify-between border-gray-500 mt-6 pt-4">
      <span class="text-lg m-voresxs font-semibold">Total</span>
      <span class="text-lg m-voresxs font-semibold">600 DKK</span>
    </div>
  </section>

  <!-- Betal Knapp under Total -->
  <div class="flex justify-center mt-6">
    <a href="/bestil">
      <Button variant="primary">Betale</Button>
    </a>
  </div>
</MainLayout>
