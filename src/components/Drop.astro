---
import { motion } from "motion";
---

<motion.div
  id="drop"
  class="absolute top-0 left-1/2 transform -translate-x-1/2 opacity-0"
  animate={{
    opacity: 1,
    y: "100vh", // Setter animasjonen til å bevege seg nedover til bunnen av skjermen
  }}
  transition={{ duration: 2, ease: "ease-out" }}
>
  <img src="/assets/images/drop.webp" alt="dråpe" class="w-16 h-16" />
</motion.div>
