---
const {
  title = "Standard Tittel",
  image = "https://via.placeholder.com/300",
  quantity = 1,
  price = "100,00",
  buttonLabel = "Legg i handlekurv",
} = Astro.props;

const cardStyling = "";

const titleStyling = "";

const imageStyling = "";

const quantityStyling = "";

const priceStyling = "";

const buttonStyling = "";
---

<div
  class="bg-white rounded-lg shadow-md p-4 transition-transform duration-300 transform hover:scale-105 flex flex-col justify-between"
>
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover rounded-md mb-4"
  />

  <p class={quantityStyling}>{quantity} Flasker / mnd</p>

  <p class={priceStyling}>{price} DKK</p>

  <h3 class={titleStyling}>{title}</h3>

  <button class={buttonStyling}>{buttonLabel}</button>
</div>
