---
import Button from "../components/Button.astro";
const {
  title = "Standard Tittel",
  image = "https://via.placeholder.com/300",
  quantity = 1,
  price = "100,00",
  buttonLabel = "Legg i handlekurv",
} = Astro.props;

const cardStyling = "";

// const titleStyling = "hover:text-roed-600 pt-voresxs";

const imageStyling = "";

const quantityStyling = "";

const priceStyling = "";

const buttonStyling = "";
---

<div
  class="bg-white rounded-lg p-4 transition-transform duration-300 transform hover:scale-105 flex flex-col justify-between group"
>
  <img
    src={image}
    alt={title}
    class="w-full h-auto object-cover rounded-md mb-4"
  />

  <p class={quantityStyling}>{quantity} Flasker / mnd</p>

  <p class={priceStyling}>{price} DKK</p>

  <h3 class="group-hover:text-roed-600 py-voresxs">{title}</h3>

  <div class="max-w-xl md:hidden block">
    <a href="#">
      <Button variant="mobileprimary">Vælg</Button>
    </a>
  </div>
  <div class="max-w-xl hidden md:block">
    <a href="#">
      <Button variant="primary">Vælg</Button>
    </a>
  </div>
</div>
