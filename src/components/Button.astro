---
const { variant = "primary" } = Astro.props;

const buttonStyling = "rounded-full px-4 p-1.5";

const variantClasses = {
  primary:
    "font-semibold bg-roed-600 text-farvenavn-hvid border border-transparent hover:bg-transparent  hover:border-farvenavn-roed hover:text-farvenavn-roed hover:border",
  secondary:
    "font-semibold bg-lilla-950 text-farvenavn-hvid border border-transparent hover:bg-transparent  hover:border-farvenavn-lilla hover:text-farvenavn-roed hover:border",
};
---

<button class:list={[buttonStyling, variantClasses[variant]]}><slot /></button>
