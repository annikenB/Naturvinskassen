    <button
      id="prev"
      class="absolute top-1/2 left-2 transform -translate-y-1/2 p-3 rounded-full"
    >
      <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    <button
      id="next"
      class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-white text-black p-3 rounded-full"
    >
      <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <div class="text-center">
      <a
        href="https://dk.trustpilot.com/review/naturvinskassen.dk"
        target="_blank"
      >
        <Button variant="secondary">Se alle Trustpilot anmeldelser</Button>
      </a>
    </div>
  </div>

  <script>
    let currentIndex = 0;
    const itemsPerView = 4;
    const carouselItems = document.getElementById("carouselItems");
    const totalItems = carouselItems.children[0].children.length;

    const prevButton = document.getElementById("prev");
    const nextButton = document.getElementById("next");

    function updateCarousel() {
      const offset = (-currentIndex * 100) / itemsPerView;
      carouselItems.style.transform = `translateX(${offset}%)`;
    }

    prevButton.addEventListener("click", () => {
      currentIndex = Math.max(currentIndex - 1, 0);
      updateCarousel();
    });

    nextButton.addEventListener("click", () => {
      currentIndex = Math.min(
        currentIndex + 1,
        Math.floor(totalItems / itemsPerView) - 1
      );
      updateCarousel();
    });

    updateCarousel();
  </script>
